{
  "name": "mcp-maple",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for accessing NEXON MapleStory Open API data through Claude and other AI assistants",
  "main": "dist/index.js",
  "bin": {
    "mcp-maple": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "maplestory",
    "nexon",
    "api",
    "typescript",
    "model-context-protocol",
    "claude",
    "ai-assistant",
    "gaming",
    "mmorpg",
    "character-data",
    "union",
    "guild",
    "ranking"
  ],
  "author": "ljy9303",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljy9303/mcp-maple.git"
  },
  "bugs": {
    "url": "https://github.com/ljy9303/mcp-maple/issues"
  },
  "homepage": "https://github.com/ljy9303/mcp-maple#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.17.1",
    "axios": "^1.7.0",
    "commander": "^12.1.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "json-schema": "^0.4.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
